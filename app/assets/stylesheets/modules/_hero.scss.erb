.hero { 
  @include media($medium-screen-up) { margin-top: 0; }

  @include linear-gradient(to top, $yellow, lighten($yellow, 6%), $fallback: $yellow);
  background: url('<%= asset_path("porch.jpg") %>') no-repeat center center; 

  background-size: cover;
  background-color: $yellow;
  width: 100%;
  height: 22em;
  padding: 7em 0 2em 0;
  margin-top: 3.5em;
  margin-bottom: $base-spacing * 2;

  .inner {
    text-align: center;
  }

  .tagline {
    @include media($large-screen-up) {
      @include span-columns(10);
      @include shift(1);
    }

    margin-top: $small-spacing;
    @include fill-parent;
    float: left;
    font-size: $base-font-size * 1.5;
    text-shadow: 1px 1px 2px $dark-gray;
  }

  h2 { 
    font-family: $base-font-family;
    margin-bottom: $base-spacing * 1.5;
    color: white;
  }

  .fb-logo {
    vertical-align: middle;
    margin-right: $small-spacing;
  }

  .action { margin-bottom: 0.25em; }

  .small {
    font-size: 0.85em;
    color: $light-gray;
  }
}