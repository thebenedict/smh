<% params['id'] == 'home' ? nav_class = 'top-nav' : nav_class = 'top-nav solid'  %>
<div class="<%= nav_class %>">
  <div class="inner">
    <% if current_user %>
      <ul class="menu">
        <li>
          <%= image_tag current_employer.avatar_url %>
          <%=current_user.employer.first_name %>
        </li>
        <li><%= link_to "My staff", employments_path %></li>
        <li><%= link_to "Log out", destroy_user_session_path, :method => :delete %></li>
      </ul>
    <% else %>
      <ul class="menu">
        <li><%= link_to "Sign up", new_user_registration_path %></li>
        <li>About</li>
        <li><%=link_to "Log in", new_user_session_path %></li>
      </ul>
    <% end %>

    <%= link_to root_path do %>
      <div class="logo">Staff my House</div>
      <%= image_tag "house.svg", class: "house" %>
    <% end %>
  </div>
</div>