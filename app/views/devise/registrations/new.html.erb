<div class="content">
  <div class="form-wrapper">
    <h1>Welcome</h1>
    <p>Create an account to get started.
    <p>Already have an account? <%= link_to "Sign in", new_user_session_path %>.</p>

    <% resource.build_employer if resource.employer.blank? %>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.simple_fields_for :employer do |e| %>
          <%= e.input :first_name %>
          <%= e.input :full_name, hint: "This name will appear on your employee references" %>
          <%= e.input :organization %>
        <% end %>

        <%= f.input :email, required: true, autofocus: true %>
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up" %>
      </div>
    <% end %>

    <%# render "devise/shared/links" %>

  </div>
</div>